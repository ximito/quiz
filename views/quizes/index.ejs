<p>Buscador</p>
<form method="get" action="/quizes/">
    <input type="text"  name="search" value="<%= search %>" />
    <input type="submit" value="Buscar" />
</form>
<br>
<p>Preguntas disponibles</p>
<table>
<% var i; for(i=0; i < quizes.length;i++){%>
<tr>
  <td>
    <select value="<%= quizes[i].tematica %>" disabled>
      <option value="otro" <% if(quizes[i].tematica==='otro') {%> selected <%}%> >Otro</option>
      <option value="humanidades" <% if(quizes[i].tematica==='humanidades') {%> selected <%}%> >Humanidades</option>
      <option value="ocio" <% if(quizes[i].tematica==='ocio') {%> selected <%}%> >Ocio</option>
      <option value="ciencia" <% if(quizes[i].tematica==='ciencia') {%> selected <%}%> >Ciencia</option>
      <option value="tecnologia" <% if(quizes[i].tematica==='tecnologia') {%> selected <%}%> >Tecnolog√≠a</option>
    </select>
  </td>
  <td><a href="/quizes/<%= quizes[i].id %>"> <%= quizes[i].pregunta %> </a></td>
  <td><a href="/quizes/<%= quizes[i].id %>/edit"> <button>editar</button></a></td>
  <td>
    <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
      <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');"> borrar </button>
    </form>
  </td>
</tr>
<%}%>
</table>
<br>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
